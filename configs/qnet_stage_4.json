{
  "name": "qnet_stage_4",
  "logging": "WandbLogger",
  "wandb_key": "<YOUR WANDB KEY>",
  "wandb_project": "QuartzNet-LibriSpeech",
  "chkpt_path": "../chkpt/qnet_stage_3_best.pt",
  "epochs": 1000000,
  "arch": {
    "name": "QuartzNet",
    "args": {
      "B_repeats": 1,
      "R": 5,
      "num_features": 64,
      "vocab_size": 28
    }
  },
  "optimizer": {
    "name": "NovoGrad",
    "args": {
      "lr": 0.05,
      "weight_decay": 0.0,
      "betas": [0.95, 0.5]
    },
    "scheduler": {
      "name": "CosineAnnealingWarmup",
      "args": {
        "first_cycle_steps": 300000,
        "warmup_steps": 1000,
        "min_lr": 0.0,
        "max_lr": 0.05
      } 
    }
  },
  "data": {
    "train": [
      {
        "name": "LibriSpeechDataset",
	"args": {
	  "path": "/NEW_HDD/HDD_3TB/msemenov/asr_datasets",
	  "part": "train-clean-100"
	}
      },
      {
        "name": "LibriSpeechDataset",
	"args": {
	  "path": "/NEW_HDD/HDD_3TB/msemenov/asr_datasets",
	  "part": "train-clean-360"
	}
      },
      {
        "name": "LibriSpeechDataset",
	"args": {
	  "path": "/NEW_HDD/HDD_3TB/msemenov/asr_datasets",
	  "part": "train-other-500"
	}
      }
    ],
    "test": [
      {
        "name": "LibriSpeechDataset",
	"args": {
	  "path": "/NEW_HDD/HDD_3TB/msemenov/asr_datasets",
	  "part": "test-other"
	}
      }
    ],
    "train_shuffle": true,
    "bsz": 32,
    "num_workers": 20,
    "train_args":{
      "sample_rate": 16000,
      "n_mels": 64,
      "augmentation": false
    },
    "test_args": {
      "sample_rate": 16000,
      "n_mels": 64,
      "augmentation": false
    }
  },
  "criterion": {
    "name": "CTCLoss",
    "args": {}
  },
  "decoder": {
    "name": "GreedyDecoder",
    "args": {}
  },
  "clip_grad": 10,
  "best_wer": 1,
  "device": "cuda",
  "device_ids": [3, 2],
  "eval_interval": 500
}
